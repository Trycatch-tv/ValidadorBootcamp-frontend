{
        "$schema": "https://biomejs.dev/schemas/1.8.1/schema.json",
        "organizeImports": {
                "enabled": true
        },
        "linter": {
                "enabled": true,
                "ignore": [
                        "node_modules",
                        "docs",
                        "dist",
                        "public",
                        "**/node_modules/**",
                        "bin"
                ],
                "rules": {
                        "recommended": true
                }
        },
        "formatter": {
                "enabled": true,
                "indentStyle": "space",
                "indentWidth": 2,
                "lineWidth": 80,
                "lineEnding": "lf",
                "ignore": [
                        "node_modules",
                        "docs",
                        "dist",
                        "public",
                        "**/node_modules/**",
                        "bin"
                ]
        },
        "files": {
                "include": [
                        "src/**/*.ts",
                        "src/**/*.tsx",
                        "src/**/*.js",
                        "src/**/*.jsx",
                        "lib/**/*.ts",
                        "lib/**/*.tsx",
                        "lib/**/*.js",
                        "lib/**/*.jsx",
                        "./biome.json",
                        "./package.json",
                        "./tsconfig.json",
                        "./vite.config.ts"
                ],
                "ignore": ["node_modules", "**/node_modules/**", "dist", "bin"],
                "ignoreUnknown": true
        }
}

